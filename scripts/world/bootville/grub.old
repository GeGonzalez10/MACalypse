#!/bin/bash
### Script de habblar con grub.old ###

### Variables ###
FILE="grub.old"

### Dialogo ###
echo -e "${BLUE}$PLAYER:${NC} Buenos dias, Sr..." | pv -qL50
echo -e "${YELLOW}$FILE:${NC} Sr grub.old, pero mis amigos me llaman grub." | pv -qL50
echo -e "${BLUE}$PLAYER:${NC} Bueno, grub.old, ¿que ha pasado aca?" | pv -qL50
echo -e "${YELLOW}$FILE:${NC} Esto se ha salido de control, he intentado calmarlos y trabajar juntos pero no quieren, solo desean que los archivos corruptos desaparezcan." | pv -qL50
echo -e "${BLUE}$PLAYER:${NC} ¿Y tu no quieres eso?" | pv -qL50
echo -e "${YELLOW}$FILE:${NC} Claro que no, pero amenazandonos entre nosotros no lo vamos a lograr, mientras peleamos ellos toman la ventaja, ¡nos van a destruir por su culpa!" | pv -qL50
echo -e "${BLUE}$PLAYER:${NC} Tranquilo, yo intentaré ayudar con eso, solo debo hablar con algunos archivos para saber si son corruptos o no." | pv -qL50
echo -e "${YELLOW}$FILE:${NC} Mucha suerte Heroe, espero nos ayudes." | pv -qL50
echo -e "${BLUE}$PLAYER:${NC} Pero necesito a alguien que me ayude, no conozco a casi ninguno de estos archivos o a los archivos en general, ¿me ayudarias?" | pv -qL50
echo -e "${YELLOW}$FILE:${NC} Todo sea por salvar a mi aldea." | pv -qL50
echo -e "${BLUE}$PLAYER:${NC} Vamos entonces." | pv -qL50

### Fin del dialogo ###
press_enter
